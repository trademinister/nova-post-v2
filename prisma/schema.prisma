generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = "postgresql://postgres:root@localhost:5432/nova_poshta_remake"
}

model Session {
  id            String      @id @default(uuid())
  shop          String
  state         String
  isOnline      Boolean     @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean     @default(false)
  locale        String?
  collaborator  Boolean?    @default(false)
  emailVerified Boolean?    @default(false)
  ffSettings    FFSettings?
  filterTabs    FilterTab[]
  ffLogs        FFLogs[]
}

model FilterTab {
  id        String   @id @default(uuid())
  title     String
  sort      String   @default("ORDER_NUMBER,desc")
  query     String   @default("")
  filters   Json
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  created   DateTime @default(now())

  @@unique([sessionId, title], name: "FilterTab_sessionId_title_key")
}

model FFSettings {
  id                        String             @id @default(uuid())
  npLogin                   String?
  npPassword                String?
  npOrganization            String?
  additionalOrganizationKey String?
  isEnabled                 Boolean            @default(false)
  processPaymentgMethod     Boolean            @default(false)
  fulfillBy                 String             @default("locations")
  orderRiskAssissemnt       Boolean            @default(false)
  orderRiskLevels           String[]           @default(["HIGH"])
  filteredByTagsIsActive    Boolean            @default(false)
  filteredTags              FFFilteredTags[]
  paymentMethods            FFPaymentMethods[]
  locations                 FFLocations[]
  collections               FFCollections[]
  sessionId                 String?            @unique
  session                   Session?           @relation(fields: [sessionId], references: [id])
}

model FFFilteredTags {
  id           String      @id @default(uuid())
  value        String
  types        String[]    @default(["order"])
  ffSettingsId String?
  ffSettings   FFSettings? @relation(fields: [ffSettingsId], references: [id])
}

model FFLocations {
  id                   String      @id @default(uuid())
  locationId           String      @unique
  name                 String
  address              String?
  destinationWarehouse String?
  isActive             Boolean     @default(false)
  remainsIsActive      Boolean     @default(false)
  ffSettingsId         String?
  ffSettings           FFSettings? @relation(fields: [ffSettingsId], references: [id])

  @@index([ffSettingsId, locationId])
}

model FFCollections {
  id                   String      @id @default(uuid())
  collectionId         String      @unique
  name                 String
  description          String?
  destinationWarehouse String?
  isActive             Boolean     @default(false)
  remainsIsActive      Boolean     @default(false)
  ffSettingsId         String?
  ffSettings           FFSettings? @relation(fields: [ffSettingsId], references: [id])

  @@index([ffSettingsId, collectionId])
}

model FFPaymentMethods {
  id           String      @id @default(uuid())
  name         String
  statuses     String[]    @default([])
  ffSettingsId String?
  ffSettings   FFSettings? @relation(fields: [ffSettingsId], references: [id])
}

//logs

model FFLogs {
  id        String   @id @default(uuid())
  orderId   String
  message   String
  status    String
  created   DateTime @default(now())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])

  @@index([orderId, created])
}

//news

model FFNews {
  id          String   @id @default(uuid())
  title       String
  description String
  created     DateTime @default(now())
}
